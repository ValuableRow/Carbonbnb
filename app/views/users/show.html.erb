
 <div class="container-fluid">
   <div class="row flex-nowrap">
     <!--SIDEBAR -->
     <%# Booker %>
     <% content_for(:booker) { render partial: 'sidebar_booker' } %>
     <%# Host %>
     <% if  (@role == 'Host')%>
     <% content_for(:host) { render partial: 'sidebar_host' } %>
     <% end%>
     <%= render  "navbar" %>
     <!--CONTENT -->
     <div class="col py-3">
       <%# Content area... %>
       <div class="container" style="margin-top: 12px">
          <h1>Hello, <%= @user.name%>!</h1>
          <h2>Our dear <%= @role%></h2>  
       </div>

       <!--CARDS -->
       <div class="container" style="margin-top: 12px">
          <% case  @redir%>
          <% when  21%>
             <%= render "bookingcard" %>
           <% when  22%>
             <%= render "bookingcardhist" %>
           <% when  61%>
             <%= render "hostbookings" %>
           <% when  62%>
             <%= render "hostbookingshist" %>
            <% else %>
             ...
          <% end %>
       </div>
     </div>
  </div>
</div>
  

<!-- end of file -->