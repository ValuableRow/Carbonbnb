
  <div class="container" style="margin-top: 12px">
    <h1><%= @flat.user.name%>: <%= @flat.name%></h1>
    <p> <i class="fa-regular fa-star"></i> <%= @flat.average_rating %> (<%= @flat.ratings.count%>) | <%= @flat.location%></p>
  </div>

  <div class="container">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @flat.photos %>);">
    </div>
  </div>

  <div class="container" style="margin-top: 12px">
    <h2>Flat description</h2>
    <p><%= @flat.description %></p>
  </div>

  <div class="container">
    <%@flat.ratings.each do |rating| %>
      <div class="rating-card">
        <p class="mb-0"><i class="fa-regular fa-star"></i> <%= rating.rating %></p>
        <p class="mb-0"><%= rating.comment %></p>
      </div>
    <% end %>
  </div>

<% if false %>
  <div class="container">
    <div class="col-12">
      <div class="bg-white rounded p-3">
        <h5>Add your rating</h5>
          <%= simple_form_for [@flat, @rating] do |f| %>
          <%= f.input :comment, placeholder: "Add your comment here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating?", input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class:"btn btn-flat" %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>
<!-- end of file -->
